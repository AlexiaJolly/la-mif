<div class="container">
  <h2>MES EVENEMENTS</h2>
  <p>Tous mes évènements et mes listes en un clic !</p>

<!-- CARD EVENEMENTS -->
  <% @events.each do |event| %>
    <div class="card m-3" style="width: 18rem;">
      <div class="card-body">
        <h4 class="card-title"><%= event.name %></h4>

        <div class="row d-flex justify-content-center">
          <% @ideas.each do |idea| %>
            <div class="cards grow d-flex justify-content-between col-xs-3 col-md-4 m-2 p-2 mx-4">
              <div class="d-flex flex-column">
                <h5><%= idea.name %></h5>
                <p><%= idea.description %></p>
                <%= link_to "Voir plus", idea.url, class: "btn btn-primary"%>
              </div>
              <div class="d-flex align-items-center justify-content-center">
              <%= cl_image_tag idea.photos.first.key, height: 150, width: 150, crop: :fill if idea.photos.first %>
              </div>
            </div>
           <% end %>
          </div>

        <%= link_to "Ajouter une idée", list_ideas_path, class: "btn btn-primary"%>
      </div>
    </div>
  <% end %>
<!-- BUTTON MODAL -->
  <button type="button" class="btn btn-primary m-3" data-toggle="modal" data-target="#exampleModalCenter">Créer un évenement</button>
<!-- MODAL BOOTSTRAP -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalCenterTitle">Nouvel Evenement</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>Je crée ma nouvelle fiesta ici !</p>
            <form>
              <div class="form-group">
                <input type="text" class="form-control" id="recipient-name" placeholder="Titre">
              </div>
              <div class="form-group">
                <input type="text" class="form-control" id="recipient-name" placeholder="Date">
              </div>
              <div class="form-group">
                <input type="text" class="form-control" id="recipient-name" placeholder="Ma liste associée">
              </div>
              <div class="form-group">
                <input type="text" class="form-control" id="recipient-name" placeholder="inviter par email">
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            <button type="button" class="btn btn-primary">Créer l'évenement</button>
          </div>
        </div>
      </div>
    </div>

</div>

