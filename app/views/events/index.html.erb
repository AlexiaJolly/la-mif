<div class="container-fluid">
  <div class="row">
    <div class="col-12">

      <div class="d-flex flex-wrap justify-content-between m-2">
        <div>
          <div class= "titre" >
            <%= "MES LISTES" %>
          </div>
          <div class= "titre_Sous" >
            <%= "Toutes mes listes en un clic" %>
          </div>

        </div>

      <!-- BUTTON MODAL -->
        <button type="button" class="btn btn-primary btn-lg m-3 new-event" data-toggle="modal" data-target="#exampleModalCenter">Créer un évenement</button>
      </div>


      <% @events.each do |event| %>
        <div class = "titre_event">
          <%= event.name %>
          <%= link_to "View", event_path(event) %>

        </div>


        <div class="lists-container">
          <% event.lists.each do |list| %>
            <% if list.user_id == current_user.id %>

              <div class="list-idea-card">
                <div class="idea-card-title">
                  <h4><%= list.title %></h4>
                </div>
                <div class="idea-card-body">
                  <div class="idea-wrappers">
                    <% list.ideas.each do |idea| %>
                      <div class="idea-wrapper">
                        <div class="idea-wrapper-icon">
                          <%= cl_image_tag idea.photo.key, width: 75, crop: :fit %>
                        </div>
                        <div class="idea-wrapper-text">
                          <div>
                            <strong><%= idea.title %></strong>
                          </div>
                          <%= idea.description %>

                        </div>
                        <div class="idea-wrapper-cta">
                          <%= link_to "modifier", idea.url, class: "btn btn-primary"%>
                        </div>
                      </div>

                    <% end %>
                  </div>
                      <div>
                    <%= link_to "Ajouter une idée", event_path(event), class: "btn btn-primary m-2 new-idea-cta" %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>




<!-- MODAL BOOTSTRAP -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalCenterTitle">Nouvel Evenement</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>Je crée ma nouvelle fiesta ici !</p>
            <form>
              <div class="form-group">
                <input type="text" class="form-control" id="recipient-name" placeholder="Titre">
              </div>
              <div class="form-group">
                <input type="text" class="form-control" id="recipient-name" placeholder="Date">
              </div>
              <div class="form-group">
                <input type="text" class="form-control" id="recipient-name" placeholder="Ma liste associée">
              </div>
              <div class="form-group">
                <input type="text" class="form-control" id="recipient-name" placeholder="inviter par email">
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            <button type="button" class="btn btn-primary">Créer l'évenement</button>
          </div>
        </div>
      </div>
    </div>

</div>
