<div class="container-fluid">
  <div class="row">
    <div class="col-12">

      <div class="d-flex flex-wrap justify-content-between m-2">
        <div>
          <div class= "titre" >
            <%= "MES LISTES" %>
          </div>
          <div class= "titre_Sous" >
            <%= "Toutes mes listes en un clic" %>
          </div>

        </div>

      <!-- BUTTON MODAL -->
        <div class="button-container p-4 ml-5">
          <a href="/events/new"><div class="btn btn-primary">Créer un évenement</div></a>
        </div>
      </div>


      <% @events.each do |event| %>
        <div class = "titre_event">
          <%= event.name %>
          <%= link_to "View", event_path(event) %>

        </div>


        <div class="lists-container">
          <% @lists = event.lists %>
          <% event.lists.each do |list| %>
            <% if list.user_id == current_user.id %>

              <div class="list-idea-card">
                <div class="idea-card-title">
                  <h4><%= list.title %></h4>
                </div>
                <div class="idea-card-body">
                  <div class="idea-wrappers">
                    <% list.ideas.each do |idea| %>
                      <div class="idea-wrapper">
                        <div class="idea-wrapper-icon">
                          <%= cl_image_tag idea.photo.key, width: 75, crop: :fit %>
                        </div>
                        <div class="idea-wrapper-text">
                          <div>
                            <strong><%= idea.title %></strong>
                          </div>
                          <%= idea.description %>

                        </div>
                        <div class="idea-wrapper-cta">
                          <%= link_to "modifier", idea.url, class: "btn btn-primary"%>
                        </div>
                      </div>

                    <% end %>
                  </div>
                      <div>
                        <div class="btn btn-primary m-2 new-idea-cta" data-toggle="modal" data-target="#static-backdrop">Ajouter une Idée</div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>




<div id="static-backdrop" class="modal mt-5" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header-me">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h5 class="nouvelle-idee">NOUVELLE IDEE</h5>
        <div class="topo">
          <p>Je rentre vite ma nouvelle idée ici !</p>
        </div>

        <%= simple_form_for [@lists.find_by(user: @user), Idea.new] do |f| %>
          <div class="form-group">
            <%= f.input :title, placeholder: 'Titre :', label: false, input_html: { class: 'form-spe' } %>
          </div>
          <div class="form-group">
            <%= f.input :description, placeholder: 'Description :', label: false, input_html: { class: 'form-spe' } %>
          </div>
          <div class="form-group">
            <%= f.input :url, placeholder: 'URL :', label: false, input_html: { class: 'form-spe' } %>
          </div>
          <label class="btn btn-primary btn-abricot" for="idea_photo">Ajouter une photo</label>
          <%= f.input :photo, as: :file, label: false, input_html: { class: "d-none" } %>
          <%= f.submit "Ajouter mon idée", class: "btn btn-primary btn-bleu" %>
        <% end %>
      </div>

    </div>
  </div>
</div>
