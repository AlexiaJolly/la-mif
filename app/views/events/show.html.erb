


<div>
  <div class="circle-div">
    <div class="title-event" >
      <h1><%= @event.name %></h1>
      <a href="#" class="btn-blue">Partager mon événement</a>
    </div>

      <ul class='circle-container'>
      <% @lists.each do |list| %>
        <% is_me = list.user == @user %>
        <li>
          <div class='grow'>
            <%= cl_image_tag list.user.photo.key, class: "avatar-bordered #{'avatar-bordered-me' if is_me}", data: { toggle: "modal", target: "#modal-list-#{list.id}" } %>
          </div>
        </li>
      <% end %>
    </ul>

    <% @lists.each do |list| %>
      <% is_me = list.user == @user %>
      <div class="modal fade" id="modal-list-<%= list.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header <%= 'modal-header-me' if is_me %>">
              <div class="d-flex align-items-center">
                <%= cl_image_tag list.user.photo.key, class: "avatar-small mr-3", data: { toggle: "modal", target: "#modal-list-#{list.id}" } %>
                <h3><%= list.title %></h3>
              </div>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>


            <div class="modal-body">

              <% list.ideas.each do |idea| %>

                  <li class="d-flex idea-card align-items-center justify-content-between">
                    <div class="d-flex">

                      <div class=" align-items-center justify-content-center mr-3">
                        <%= cl_image_tag idea.photo.key, height: 150, width: 150 if idea.photo %>
                      </div>
                      <div class="idea-title">
                        <h5> <strong> <%= idea.title %> </strong><h5/>
                        <p><%= idea.description %></p>
                      </div>
                    </div>
                      <% unless is_me %>
                      <a href="/ideas/<%=idea.id%>"><div class="btn btn-primary m-2">Choisir</div></a>
                      <% end %>

                  </li>

                </ul>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>


  </div>
</div>
