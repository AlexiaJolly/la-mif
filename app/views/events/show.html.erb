
<div>
  <div class="circle-div">
    <div class="title-event" >
      <h1><%= @event.name %></h1>
    </div>
    <ul class='circle-container'>
      <% @lists.each do |list| %>
        <% is_me = list.user == @user %>
        <li>
          <div class='grow'>
            <%= cl_image_tag list.user.photo.key, class: "avatar-bordered #{'avatar-bordered-me' if is_me}", data: { toggle: "modal", target: "#modal-list-#{list.id}" } %>
          </div>
        </li>
      <% end %>
    </ul>

    <% @lists.each do |list| %>
      <% is_me = list.user == @user %>
      <div class="modal fade" id="modal-list-<%= list.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header <%= 'modal-header-me' if is_me %>">
              <%= cl_image_tag list.user.photo.key, class: "avatar-small", data: { toggle: "modal", target: "#modal-list-#{list.id}" } %>
              <h5 class="modal-title m-2" id="exampleModalCenterTitle"><h3><%= list.title %></h3></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>


            <div class="modal-body">
              <% if is_me %>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#static-backdrop">
                  Enrichir ma liste
                </button>

              <% end %>
              <% list.ideas.each do |idea| %>

                <li class="d-flex">

                  <li class="d-flex">

                    <div class="idea-card">
                      <div class="d-flex align-items-center justify-content-center">
                        <%= cl_image_tag idea.photo.key, height: 150, width: 150, crop: :fill if idea.photo %>
                      </div>
                      <div class="idea-title">
                        <h5> <strong> <%= idea.title %> </strong><h5/>
                        <p><%= idea.description %></p>
                      </div>
                      <a href="/ideas/<%=idea.id%>"><div class="btn btn-primary m-2 <%= 'btn btn-primary-me' if is_me %>"> <%= is_me ? "Modifier" : "Choisir l'idee"   %></div></a>
                    </div>


                  </li>



                </ul>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div id="static-backdrop" class="modal mt-5" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header-me">
            <h5 class="modal-title"></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h5 class="nouvelle-idee">NOUVELLE IDEE</h5>
            <div class="topo">
              <p>Je rentre vite ma nouvelle idée ici !</p>
            </div>

            <%= simple_form_for [@lists.find_by(user: @user), Idea.new] do |f| %>
            <div class="form-group">
              <%= f.input :title, placeholder: 'Titre :', label: false, input_html: { class: 'form-spe' } %>
            </div>
            <div class="form-group">
              <%= f.input :description, placeholder: 'Description :', label: false, input_html: { class: 'form-spe' } %>
            </div>
            <div class="form-group">
              <%= f.input :url, placeholder: 'URL :', label: false, input_html: { class: 'form-spe' } %>
            </div>
              <label class="btn btn-primary btn-abricot" for="idea_photo">Ajouter une photo</label>
              <%= f.input :photo, as: :file, label: false, input_html: { class: "d-none" } %>
              <%= f.submit "Ajouter mon idée", class: "btn btn-primary btn-bleu" %>
            <% end %>
          </div>

        </div>
      </div>
    </div>
    <div id="static-backdrop" class="modal pop-up-new-product" >
    </div>
  </div>
</div>

