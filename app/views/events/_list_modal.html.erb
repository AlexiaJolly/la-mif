<!-- Modal -->
<div class="modal fade" id='<%= "staticBackdrop#{list.id}" %>' tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title nouvelle-idee" id="exampleModalLongTitle">NOUVELLE IDEE</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="topo">
          <p>Je rentre vite ma nouvelle idée ici!</p>
        </div>

        <%= simple_form_for [list,  Idea.new] do |f| %>
          <div class="form-group">
            <%= f.input :title, placeholder: 'Titre', label: false, input_html: { class: 'form-spe' } %>
          </div>
          <div class="form-group">
            <%= f.input :description, placeholder: 'Description', label: false, input_html: { class: 'form-spe' } %>
          </div>
          <div class="form-group">
            <%= f.input :url, placeholder: 'URL', label: false, input_html: { class: 'form-spe' } %>
          </div>
          <label class="btn btn-primary btn-abricot" for='<%= "idea_photo#{list.id}" %>'>Ajouter une photo</label>
          <%= f.input :photo, as: :file, label: false, input_html: { class: "d-none", id: "idea_photo#{list.id}" } %>
          <%= f.submit "Ajouter mon idée", class: "btn btn-primary btn-bleu" %>
        <% end %>
      </div>
      <!-- <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div> -->
    </div>
  </div>
</div>
