<div class="card-container mt-5">
      <div class="idea-card">
        <div class="d-flex align-items-center justify-content-center">
          <%= cl_image_tag @idea.photo.key, height: 150, width: 150, crop: :fill if @idea.photo %>
        </div>
        <div class="box">
          <div class="idea-text">
            <h4><%= @idea.title %></h4>
            <p><%= @idea.description %></p>
          </div>
          <a href="/"><div class="btn btn-primary p-2">Home</div></a>
        </div>
      </div>
</div>